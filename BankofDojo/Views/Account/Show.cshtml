@{
    ViewData["Title"] = "Account"
}
@model BankofDojo.Models.Tansaction

<h1>Welcome, @Viewbag.AccountUser</h1>
<h4><a asp-controller="Register" asp-action="Logoff">Logoff</a></h4>
<h3>Current Account Balance: <span>@string.Format("{0:C}", ViewBag.Balance)</span>
<form asp-controller="Transaction" asp-action="instance" metho="POST">
    <fieldset>
        <input type="number" min"@Viewbag.Minimum" step="0.01" value="0.00" asp-for="Amount"/>
        <span asp-validation-for="Amount"></span>
        <button>Submit</button>
    </fieldset>
</form>
<table>
    <thead>
        <tr>
            <td>Amount</td>
            <td>Date</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var instance in @ViewBag.UserTransactions)
        {
            <tr>
                <td>@string.Format("{0:C}", instance.Amount)</td>
                <td>@instance.CreatedAt.ToString("MMM d, yyyy")</td>
            </tr>
        }
    </tbody>
</table>
